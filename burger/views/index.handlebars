<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burger/" method="POST">
                <button type="submit" class='burgerMenu'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col-sm-6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerDevoured'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add a Burger</h2>

<div class="row">
  <div class="col-sm-12">
    <form action="/burger/" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Amazing Burger">
      <button type="submit" class="addBurger">Add Burger</button>
    </form>
  </div>
</div>